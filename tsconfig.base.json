{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@fitness-recoder/vite-plugin-i18next-language-package-loader": [
        "libs/vite-plugin-i18next-language-package-loader/src/index.ts"
      ],
      "@fitness-recoder/vite-plugin-graphql-server": [
        "libs/vite-plugin-graphql-server/src/index.ts"
      ],
      "@fitness-recoder/structure": ["libs/structure/src/index.ts"],
      "@fitness-recoder/sqlite-worker": ["libs/sqlite-worker/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
